<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ETP_Question_Caller">

    <EditText
        android:id="@+id/questionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your name"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="" />

    <EditText
        android:id="@+id/questionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionName"
        android:layout_alignEnd="@+id/questionName"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your number"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="" />

    <Button
        android:id="@+id/questionCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionNumber"
        android:layout_alignStart="@+id/questionNumber"
        android:layout_alignEnd="@+id/questionNumber"
        android:layout_marginStart="57dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="65dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="Call" />


</RelativeLayout>