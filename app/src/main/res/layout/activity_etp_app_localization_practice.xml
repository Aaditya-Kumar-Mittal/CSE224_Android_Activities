<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ETP_AppLocalizationPractice">


    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Three ducks"
        android:textAlignment="center"
        android:textColor="@color/purple_dark"
        android:textFontWeight="500"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/three_ducks"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textFontWeight="500"
        android:textSize="35sp" />

    <Button
        android:id="@+id/hindiETP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="हिंदी में"
        android:textSize="20sp" />

    <Button
        android:id="@+id/englisETP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="In English"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sanskritETP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="संस्कृते"
        android:textSize="20sp" />
</LinearLayout>